{
  "name": "scatter",
  "version": "12.1.1",
  "buttonText": "Scatter Desktop Companion",
  "author": {
    "name": "GetScatter",
    "email": "support@get-scatter.com",
    "url": "https://get-scatter.com/"
  },
  "scripts": {
    "install-deps": "electron-builder install-app-deps",
    "postinstall": "electron-rebuild",
    "release": "node scripts/release",
    "testfile": "cross-env TESTING=1 electron-mocha --exit --timeout 1000000",
    "test": "npm run testfile \"test/**/*.spec.js\" --timeout 1000000"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^4.68.4",
    "@ledgerhq/hw-transport-node-hid": "^4.78.0",
    "@vvvictorlee2020/bitcoin": "^1.0.60",
    "@vvvictorlee2020/core": "^1.0.56",
    "@vvvictorlee2020/eosio": "^0.0.67",
    "@vvvictorlee2020/roxe": "^0.0.79",
    "@vvvictorlee2020/ethereum": "^0.0.63",
    "@vvvictorlee2020/fio": "^0.0.31",
    "@vvvictorlee2020/tron": "^0.0.65",
    "aes-oop": "^1.0.4",
    "asn1-ber": "^1.0.9",
    "bip32-path": "^0.4.2",
    "bip39": "2.6.0",
    "create-hash": "^1.2.0",
    "dotenv": "^8.1.0",
    "electron-store": "^3.2.0",
    "elliptic": "^6.5.1",
    "embedder": "https://github.com/vvvictorlee/Scatter-Embedder.git#master",
    "eosjs": "^20.0.0",
    "eosjs-ecc": "^4.0.7",
    "roxejs": "^1.0.4",
    "roxejs-ecc": "^1.0.0",
    "ethereumjs-tx": "^2.1.0",
    "isomorphic-fetch": "^2.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-notifier": "^5.3.0",
    "rxjs": "^6.5.4",
    "scrypt-async": "^2.0.1",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "cross-env": "^6.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^21.2.0",
    "electron-mocha": "^8.1.2",
    "electron-notarize": "^0.2.0",
    "electron-rebuild": "^1.8.5",
    "mocha": "^6.2.0",
    "secp256k1": "^3.6.2",
    "web3": "^1.0.0-beta.55"
  },
  "resolutions": {
    "**/lodash": "^4.13.1",
    "**/mixin-deep": "^2.0.1",
    "**/set-value": "^3.0.1",
    "**/eosjs-ecc": "4.0.7"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/GetScatter/ScatterDesktop/issues"
  },
  "build": {
    "productName": "scatter",
    "appId": "com.get-scatter.server",
    "afterSign": "macos/notarize.js",
    "artifactName": "${os}-${productName}-${version}-${arch}.${ext}",
    "asar": true,
    "asarUnpack": [
      "node_modules/node-notifier/vendor/**"
    ],
    "protocols": {
      "name": "electron-deep-linking",
      "schemes": [
        "scatter"
      ]
    },
    "files": [
      "electron/**/*",
      "static/**/*",
      "html/**/*",
      ".env",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "publish": {
      "provider": "github"
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Scatter"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "entitlements": "macos/entitlements.mac.plist",
      "entitlementsInherit": "macos/entitlements.mac.plist",
      "icon": "static/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "icon": "static/icons/icon.png",
      "contents": [
        {
          "x": 134,
          "y": 190
        },
        {
          "x": 344,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "static/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "certificateSubjectName": "GetScatter Ltd."
    },
    "linux": {
      "category": "Network",
      "desktop": {
        "Name": "Scatter",
        "GenericName": "Scatter Desktop",
        "X-GNOME-FullName": "scatter",
        "Comment": "Scatter desktop signature server.",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "false",
        "Categories": "Network;"
      },
      "icon": "static/icons",
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "homepage": "https://get-scatter.com",
  "keywords": [
    "scatter",
    "blockchain",
    "signatures",
    "eos",
    "ethereum"
  ],
  "license": "MIT",
  "main": "electron.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GetScatter/ScatterDesktop.git"
  }
}
